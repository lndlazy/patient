<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45">

        <ImageView
            android:id="@+id/ivLeft"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/x45"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:minHeight="@dimen/x40"
            android:minWidth="@dimen/x40"
            android:padding="@dimen/x12"
            android:src="@mipmap/ic_arrow_left" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x45"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/x71"
            android:layout_marginRight="@dimen/x71"
            android:gravity="center"
            android:singleLine="true"
            android:text="我的家人"
            android:textColor="@color/tab_colorf9"
            android:textSize="@dimen/textsize_18sp" />

        <TextView
            android:id="@+id/ivRight"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/x45"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x5"
            android:gravity="center_vertical"
            android:minHeight="@dimen/x40"
            android:minWidth="@dimen/x40"
            android:padding="@dimen/x10"
            android:text="编辑"
            android:textColor="@color/tab_colorf9" />
    </RelativeLayout>

    <include layout="@layout/line_gray" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x15"
                    android:gravity="center"
                    android:text="姓名"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

                <TextView
                    android:id="@+id/etName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="@dimen/x10"
                    android:singleLine="true"
                    android:textColor="@color/txt_color_ma3"
                    android:textColorHint="@color/line_color9b"
                    android:textSize="@dimen/textsize_15sp" />


                <!---->
                <!--<TextView-->
                <!--android:layout_width=""-->
                <!--android:layout_height="" />-->


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_colore5" />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:paddingLeft="@dimen/x15"
                android:paddingRight="@dimen/x15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="性别"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

                <TextView
                    android:id="@+id/tvSex"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x5"
                    android:gravity="center"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_colore5" />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:paddingLeft="@dimen/x15"
                android:paddingRight="@dimen/x15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="出生日期"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />


                <TextView
                    android:id="@+id/tvBirthday"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x5"
                    android:gravity="center"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_colore5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:paddingLeft="@dimen/x15"
                android:paddingRight="@dimen/x15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="与患者关系"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

                <TextView
                    android:id="@+id/tvRelationship"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x5"
                    android:gravity="center"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_colore5" />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:paddingLeft="@dimen/x15"
                android:paddingRight="@dimen/x15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="所在城市"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

                <TextView
                    android:id="@+id/tvCity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x5"
                    android:gravity="center"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

            </RelativeLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_colore5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x15"
                    android:gravity="center"
                    android:text="手机号码"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

                <TextView
                    android:id="@+id/tvTel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="@dimen/x10"
                    android:singleLine="true"
                    android:textColor="@color/txt_color_ma3"
                    android:textColorHint="@color/line_color9b"
                    android:textSize="@dimen/textsize_15sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_colore5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x15"
                    android:gravity="center"
                    android:text="身份证号码"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

                <TextView
                    android:id="@+id/tvIdCard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="@dimen/x10"
                    android:singleLine="true"
                    android:textColor="@color/txt_color_ma3"
                    android:textColorHint="@color/line_color9b"
                    android:textSize="@dimen/textsize_15sp" />

            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_colore5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x15"
                    android:gravity="center"
                    android:text="医保卡号"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

                <TextView
                    android:id="@+id/tvHospitalCard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="@dimen/x10"
                    android:singleLine="true"
                    android:textColor="@color/txt_color_ma3"
                    android:textColorHint="@color/line_color9b"
                    android:textSize="@dimen/textsize_15sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x10"
                android:background="@color/bg_home" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x15"
                android:text="疾病史"
                android:textSize="@dimen/textsize_18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvDisHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="start"
                android:minHeight="@dimen/x50"
                android:paddingBottom="@dimen/x15"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x15"
                android:paddingTop="@dimen/x15"
                android:textColorHint="@color/line_color9b" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x10"
                android:background="@color/bg_home" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x15"
                android:text="过敏史"
                android:textSize="@dimen/textsize_18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvAllergyHis"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:background="@android:color/white"
                android:gravity="start"

                android:paddingBottom="@dimen/x15"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x15"
                android:paddingTop="@dimen/x15"
                android:textColorHint="@color/line_color9b" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x10"
                android:background="@color/bg_home" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x15"
                android:text="手术"
                android:textSize="@dimen/textsize_18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSurgeryHis"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:background="@android:color/white"
                android:gravity="start"
                android:paddingBottom="@dimen/x15"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x15"
                android:paddingTop="@dimen/x15"
                android:textColorHint="@color/line_color9b" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>