<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.ylean.cf_hospitalapp.widget.TitleBackBarView
        android:id="@+id/tbv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        custom:mTitleBarColor="@color/tab_colorf9"
        custom:mTitleBarText="收货地址设置"
        custom:mTitleLeft="@mipmap/ic_arrow_left" />

    <include layout="@layout/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x15">

        <TextView
            android:layout_width="@dimen/x80"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="收货人"
            android:textColor="@color/txt_color_ma3"
            android:textSize="@dimen/textsize_15sp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:hint="请输入收货人姓名"
            android:textSize="@dimen/textsize_15sp" />

    </LinearLayout>

    <include layout="@layout/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x15">

        <TextView
            android:layout_width="@dimen/x80"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="手机号码"
            android:textColor="@color/txt_color_ma3"
            android:textSize="@dimen/textsize_15sp" />

        <EditText
            android:id="@+id/etTel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:hint="请输入手机号码"
            android:textSize="@dimen/textsize_15sp" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10"
        android:background="@color/bg_home" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x15">

        <TextView
            android:layout_width="@dimen/x80"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="所在地区"
            android:textColor="@color/txt_color_ma3"
            android:textSize="@dimen/textsize_15sp" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:hint="请输入所在地区"
            android:textSize="@dimen/textsize_15sp" />

        <ImageView
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:padding="@dimen/x12"
            android:src="@mipmap/ic_choose_arrow" />

    </LinearLayout>

    <include layout="@layout/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/x40"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x15">

        <TextView
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x40"
            android:gravity="center_vertical"
            android:text="详细地址"
            android:textColor="@color/txt_color_ma3"
            android:textSize="@dimen/textsize_15sp" />

        <EditText
            android:id="@+id/etAddDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:hint="请输入详细地址"
            android:minHeight="@dimen/x40"
            android:textSize="@dimen/textsize_15sp" />

    </LinearLayout>

    <include layout="@layout/line_gray" />

    <LinearLayout
        android:id="@+id/llDefault"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:layout_marginLeft="@dimen/x7"
        android:layout_marginTop="@dimen/x10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivDefault"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:padding="@dimen/x8"
            android:src="@drawable/select_choose_t_f" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="设为默认地址" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tvNext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_alignParentBottom="true"
        android:background="@color/tab_colorf9"
        android:gravity="center"
        android:text="添加新地址"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textsize_18sp" />

</LinearLayout>