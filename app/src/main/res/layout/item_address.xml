<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlAddress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/x15">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x30"
        android:gravity="center_vertical"
        android:text="姓名"
        android:textColor="@color/txt_color_ma3"
        android:textSize="@dimen/textsize_15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTel"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x30"
        android:layout_marginLeft="@dimen/x5"
        android:layout_toRightOf="@id/tvName"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/txt_color_ma3"
        android:textSize="@dimen/textsize_13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAddressDetail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:layout_below="@id/tvName"
        android:drawableLeft="@mipmap/ic_location_gray"
        android:drawablePadding="@dimen/x3"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="地址"
        android:textColor="@color/txt_color_light9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:layout_below="@id/tvAddressDetail"
        android:layout_marginTop="@dimen/x10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivDefault"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:padding="@dimen/x8"
            android:src="@drawable/select_choose_t_f" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="设为默认地址" />

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:padding="@dimen/x8"
            android:src="@mipmap/ic_edit_gray" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_marginLeft="@dimen/x5"
            android:padding="@dimen/x8"
            android:src="@mipmap/ic_trush" />

    </LinearLayout>

</RelativeLayout>