<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.ylean.cf_hospitalapp.widget.TitleBackBarView
        android:id="@+id/tbv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        custom:mTitleBarColor="@color/tab_colorf9"
        custom:mTitleBarText="@string/add_family_num"
        custom:mTitleLeft="@mipmap/ic_arrow_left" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_colore5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x15"
                    android:gravity="center"
                    android:text="姓名"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="@string/input_name"
                    android:paddingLeft="@dimen/x10"
                    android:singleLine="true"
                    android:textColor="@color/txt_color_ma3"
                    android:textColorHint="@color/line_color9b"
                    android:textSize="@dimen/textsize_15sp" />


                <!---->
                <!--<TextView-->
                <!--android:layout_width=""-->
                <!--android:layout_height="" />-->


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_colore5" />

            <RelativeLayout
                android:id="@+id/rlSex"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:paddingLeft="@dimen/x15"
                android:paddingRight="@dimen/x15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="性别"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="@dimen/x15"
                    android:layout_height="@dimen/x15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_choose_arrow" />

                <TextView
                    android:id="@+id/tvSex"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_toLeftOf="@id/iv1"
                    android:gravity="center"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_colore5" />

            <RelativeLayout
                android:id="@+id/rlBirthday"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:paddingLeft="@dimen/x15"
                android:paddingRight="@dimen/x15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="出生日期"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="@dimen/x15"
                    android:layout_height="@dimen/x15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_choose_arrow" />

                <TextView
                    android:id="@+id/tvBirthday"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_toLeftOf="@id/iv2"
                    android:gravity="center"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_colore5" />

            <RelativeLayout
                android:id="@+id/rlRelationship"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:paddingLeft="@dimen/x15"
                android:paddingRight="@dimen/x15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="与患者关系"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="@dimen/x15"
                    android:layout_height="@dimen/x15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_choose_arrow" />

                <TextView
                    android:id="@+id/tvRelationship"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_toLeftOf="@id/iv3"
                    android:gravity="center"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_colore5" />

            <RelativeLayout
                android:id="@+id/rlCity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:paddingLeft="@dimen/x15"
                android:paddingRight="@dimen/x15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="所在城市"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="@dimen/x15"
                    android:layout_height="@dimen/x15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_choose_arrow" />

                <TextView
                    android:id="@+id/tvCity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_toLeftOf="@id/iv4"
                    android:gravity="center"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

            </RelativeLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_colore5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x15"
                    android:gravity="center"
                    android:text="手机号码"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

                <EditText
                    android:id="@+id/etTel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="@string/input_tel"
                    android:paddingLeft="@dimen/x10"
                    android:singleLine="true"
                    android:textColor="@color/txt_color_ma3"
                    android:textColorHint="@color/line_color9b"
                    android:textSize="@dimen/textsize_15sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_colore5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x15"
                    android:gravity="center"
                    android:text="身份证号码"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

                <EditText
                    android:id="@+id/etIdCard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="@string/input_id_num"
                    android:paddingLeft="@dimen/x10"
                    android:singleLine="true"
                    android:textColor="@color/txt_color_ma3"
                    android:textColorHint="@color/line_color9b"
                    android:textSize="@dimen/textsize_15sp" />

            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_colore5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x15"
                    android:gravity="center"
                    android:text="医保卡号"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

                <EditText
                    android:id="@+id/etHospitalCard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="@string/input_id_card"
                    android:paddingLeft="@dimen/x10"
                    android:singleLine="true"
                    android:textColor="@color/txt_color_ma3"
                    android:textColorHint="@color/line_color9b"
                    android:textSize="@dimen/textsize_15sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x10"
                android:background="@color/bg_home" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x15"
                android:text="疾病史"
                android:textSize="@dimen/textsize_18sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/etDisHistory"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:background="@android:color/white"
                android:gravity="start"
                android:hint="@string/input_dis_history"
                android:paddingBottom="@dimen/x15"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x15"
                android:paddingTop="@dimen/x15"
                android:textColorHint="@color/line_color9b" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x10"
                android:background="@color/bg_home" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x15"
                android:text="过敏史"
                android:textSize="@dimen/textsize_18sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/etAllergyHis"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:background="@android:color/white"
                android:gravity="start"
                android:hint="@string/input_allergy_history"
                android:paddingBottom="@dimen/x15"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x15"
                android:paddingTop="@dimen/x15"
                android:textColorHint="@color/line_color9b" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x10"
                android:background="@color/bg_home" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x15"
                android:text="手术"
                android:textSize="@dimen/textsize_18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etSurgeryHis"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:background="@android:color/white"
                android:gravity="start"
                android:hint="@string/input_surgery_history"
                android:paddingBottom="@dimen/x15"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x15"
                android:paddingTop="@dimen/x15"
                android:textColorHint="@color/line_color9b" />

            <TextView
                android:id="@+id/tvSave"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:background="@color/tab_colorf9"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textsize_18sp" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>