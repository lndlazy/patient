<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ylean.cf_hospitalapp.widget.TitleBackBarView
        android:id="@+id/tbv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x44"
        custom:mTitleBarColor="@android:color/black"
        custom:mTitleBarSize="@dimen/textsize_18sp"
        custom:mTitleBarText="@string/choose_date"
        custom:mTitleLeft="@mipmap/ic_arrow_left" />

    <include layout="@layout/line_gray" />

    <com.ylean.cf_hospitalapp.timesquare.CalendarPickerView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/x14"
        android:paddingLeft="@dimen/x14"
        android:paddingRight="@dimen/x14"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="none" />

</LinearLayout>