<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="@dimen/x15">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvImg"
        android:layout_width="@dimen/x120"
        android:layout_height="wrap_content"
        fresco:failureImage="@mipmap/ic_load_fail"
        fresco:placeholderImage="@mipmap/ic_hospital"
        fresco:viewAspectRatio="1.33" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x8"
        android:layout_toRightOf="@id/sdvImg"
        android:ellipsize="end"
        android:lines="2"
        android:text="吃完火锅上火脸上冒痘？只因材料不对？"
        android:textColor="@color/txt_color_ma3"
        android:textSize="@dimen/textsize_18sp" />

    <TextView
        android:id="@+id/tvConent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginTop="@dimen/x3"
        android:layout_toRightOf="@id/sdvImg"
        android:ellipsize="end"
        android:lines="2"
        android:text="如果你无法简洁的表达你的想法，那只说明你还不够了解它。"
        android:textColor="@color/txt_color_light76"
        android:textSize="@dimen/textsize_16sp" />

</RelativeLayout>