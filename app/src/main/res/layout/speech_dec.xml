<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x15"
        android:text="隐形正畸的危害？30岁再进行正畸还来得及吗？"
        android:textColor="@color/txt_color_ma3"
        android:textSize="@dimen/textsize_20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="一天前"
            android:textColor="@color/txt_color_light9" />

        <ImageView
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:padding="@dimen/x8"
            android:src="@mipmap/ic_read" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x8"
            android:gravity="center_vertical"
            android:text="5"
            android:textColor="@color/txt_color_light9" />

        <ImageView
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:padding="@dimen/x8"
            android:src="@mipmap/ic_good" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="5"
            android:textColor="@color/txt_color_light9" />

    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/i1"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/x5"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginTop="@dimen/x5"
        app:cardElevation="@dimen/x5">

        <RelativeLayout
            android:id="@+id/rlPatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/x15">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdvImg"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_marginRight="@dimen/x5" />

            <TextView
                android:id="@+id/t1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:layout_toRightOf="@id/sdvImg"
                android:gravity="center_vertical"
                android:text="就诊人"
                android:textColor="@color/txt_color_ma3"
                android:textSize="@dimen/textsize_18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x30"
                android:layout_below="@id/t1"
                android:layout_toRightOf="@id/sdvImg"
                android:gravity="center_vertical"
                android:text="高致函"
                android:textColor="@color/txt_color_ma3"
                android:textSize="@dimen/textsize_18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvIdCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:layout_alignTop="@id/tvName"
                android:layout_marginLeft="@dimen/x15"
                android:layout_toRightOf="@id/tvName"
                android:gravity="center_vertical"
                android:text="身份证   "
                android:textColor="@color/txt_color_light9"
                android:textSize="@dimen/textsize_15sp" />

            <TextView
                android:id="@+id/tvAge"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:layout_below="@id/tvName"
                android:layout_toRightOf="@id/sdvImg"
                android:gravity="center_vertical"
                android:text="岁  男"
                android:textColor="@color/txt_color_light9"
                android:textSize="@dimen/textsize_15sp" />

            <TextView
                android:layout_width="@dimen/x55"
                android:layout_height="@dimen/x23"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/x8"
                android:background="@drawable/shape_bg_blue"
                android:gravity="center"
                android:text="已关注"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textsize_13sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/bg_home" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:layout_marginLeft="@dimen/x15"
        android:gravity="bottom"
        android:text="医生寄语"
        android:textSize="@dimen/textsize_16sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/x80"
        android:padding="@dimen/x15"
        android:text="    正规且专业的隐形矫正才能做到对牙齿的伤害微乎其微。为什么这么说?首先，牙齿的硬度是比较大的，明显不同于骨骼的硬度，所以合适的力量并不会对牙齿造成太大伤害。" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x15">


        <ImageView
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:padding="@dimen/x8"
            android:src="@mipmap/ic_good" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="5"
            android:textColor="@color/txt_color_light9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x8"
            android:gravity="center_vertical"
            android:text="08-09 |   12:23"
            android:textColor="@color/txt_color_light9" />


    </LinearLayout>

</LinearLayout>