<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.ylean.cf_hospitalapp.widget.TitleBackBarView
            android:id="@+id/tbv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            custom:mTitleBarColor="@color/tab_colorf9"
            custom:mTitleBarText="@string/buy_service"
            custom:mTitleLeft="@mipmap/ic_arrow_left" />

        <include layout="@layout/line_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/x15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="订单号"
                android:textColor="@color/txt_color_ma3"
                android:textSize="@dimen/textsize_16sp" />


            <TextView
                android:id="@+id/tvOrderNum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:textColor="@color/txt_color_light9"
                android:textSize="@dimen/textsize_16sp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x10"
            android:background="@color/bg_home" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:gravity="bottom"
            android:paddingBottom="@dimen/x5"
            android:paddingLeft="@dimen/x15"
            android:text="@string/buy_name"
            android:textColor="@color/txt_color_light9"
            android:textSize="@dimen/textsize_16sp" />

        <include layout="@layout/line_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/x40"
                android:layout_weight="1"
                android:gravity="center"

                android:textColor="@color/txt_color_ma3"
                android:textSize="@dimen/textsize_16sp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="@dimen/x40"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/txt_color_ma3"
                android:textSize="@dimen/textsize_16sp" />

            <TextView
                android:id="@+id/tvPriceTimes"
                android:layout_width="0dp"
                android:layout_height="@dimen/x40"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/txt_color_light36"
                android:textSize="@dimen/textsize_16sp" />

            <TextView
                android:id="@+id/times"
                android:layout_width="0dp"
                android:layout_height="@dimen/x40"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1次"
                android:textColor="@color/txt_color_ma3"
                android:textSize="@dimen/textsize_16sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x10"
            android:background="@color/bg_home" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:gravity="bottom"
            android:paddingBottom="@dimen/x5"
            android:paddingLeft="@dimen/x15"
            android:text="@string/choose_buy_style"
            android:textColor="@color/txt_color_light9"
            android:textSize="@dimen/textsize_16sp" />

        <include layout="@layout/line_gray" />

        <RelativeLayout
            android:id="@+id/rlWeixin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/x15">

            <ImageView
                android:id="@+id/ivw"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_weixinpay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x8"
                android:layout_toRightOf="@id/ivw"
                android:gravity="center_vertical"
                android:text="微信支付"
                android:textColor="@color/txt_color_ma3"
                android:textSize="@dimen/textsize_16sp" />


            <ImageView
                android:id="@+id/ivWeixin"
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/select_choose_ask_family" />
        </RelativeLayout>

        <include layout="@layout/line_gray" />

        <RelativeLayout
            android:id="@+id/rlAlipay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/x15">

            <ImageView
                android:id="@+id/iva"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_alipay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x8"
                android:layout_toRightOf="@id/iva"
                android:gravity="center_vertical"
                android:text="支付宝支付"
                android:textColor="@color/txt_color_ma3"
                android:textSize="@dimen/textsize_16sp" />

            <ImageView
                android:id="@+id/ivAlipay"
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/select_choose_ask_family" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="实际支付："
            android:textColor="@color/line_color9b"
            android:textSize="@dimen/textsize_13sp" />

        <TextView
            android:id="@+id/tvPayPrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/txt_color_light36"
            android:textSize="@dimen/textsize_16sp" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_gray" />

        <LinearLayout
            android:layout_width="@dimen/x50"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:src="@mipmap/ic_service" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x2"
                android:text="@string/custom_service"
                android:textColor="@color/txt_color_light9"
                android:textSize="@dimen/textsize_8sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvSureOrder"
            android:layout_width="@dimen/x80"
            android:layout_height="match_parent"
            android:background="@color/tab_colorf9"
            android:gravity="center"
            android:text="确认订单"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_16sp" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignTop="@id/ll1"
        android:background="@color/line_colore5" />

</RelativeLayout>