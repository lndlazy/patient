<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45">

        <TextView
            android:id="@+id/tvLeft"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x45"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:minWidth="@dimen/x40"
            android:padding="@dimen/x10"
            android:text="取消"
            android:textColor="@color/tab_colorf9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x45"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/x71"
            android:layout_marginRight="@dimen/x71"
            android:gravity="center"
            android:singleLine="true"
            android:text="售后申请"
            android:textColor="@color/tab_colorf9"
            android:textSize="@dimen/textsize_18sp" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/line_gray" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:paddingLeft="@dimen/x15"
                android:paddingRight="@dimen/x15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="售后类型"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="退款申请"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_13sp" />


            </RelativeLayout>

            <include layout="@layout/line_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/x15">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdvImg"
                    android:layout_width="@dimen/x35"
                    android:layout_height="@dimen/x35"
                    android:layout_marginTop="@dimen/x10"
                    fresco:roundAsCircle="true" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x30"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_toRightOf="@id/sdvImg"
                    android:gravity="center_vertical"
                    android:maxWidth="@dimen/x70"
                    android:singleLine="true"
                    android:text="医生姓名"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x30"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_toRightOf="@id/tvName"
                    android:gravity="center_vertical"
                    android:text="科室 医生职称"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_14sp"
                    android:textStyle="bold" />

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="@dimen/x30"-->
                <!--android:layout_marginLeft="@dimen/x5"-->
                <!--android:layout_toRightOf="@id/tvDepartment"-->
                <!--android:gravity="center_vertical"-->
                <!--android:text="医生职称"-->
                <!--android:textColor="@color/txt_color_ma3"-->
                <!--android:textSize="@dimen/textsize_14sp"-->
                <!--android:textStyle="bold" />-->

                <TextView
                    android:id="@+id/tvHospitalName"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x30"
                    android:layout_below="@id/tvName"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_toRightOf="@id/sdvImg"
                    android:gravity="center_vertical"
                    android:text="医院名称"
                    android:textColor="@color/line_color9b"
                    android:textSize="@dimen/textsize_15sp" />

                <TextView
                    android:id="@+id/tvIntroduce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvHospitalName"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_toRightOf="@id/sdvImg"
                    android:ellipsize="end"
                    android:lines="2"
                    android:minHeight="@dimen/x30"
                    android:text="医生介绍"
                    android:textColor="@color/txt_color_light76"
                    android:textSize="@dimen/textsize_14sp" />

            </RelativeLayout>

            <include layout="@layout/line_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:paddingLeft="@dimen/x15"
                android:paddingRight="@dimen/x15">

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="订单类型"
                    android:textColor="@color/txt_color_ma3"
                    android:textSize="@dimen/textsize_15sp" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="价格"
                    android:textColor="@color/color_36"
                    android:textSize="@dimen/textsize_15sp" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x10"
                android:background="@color/bg_home" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x15"
                android:text="问题描述"
                android:textColor="@color/txt_color_ma3"
                android:textSize="@dimen/textsize_15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                android:background="@color/color_fb"
                android:gravity="start"
                android:hint="请输入问题描述的信息"
                android:minHeight="@dimen/x100"
                android:padding="@dimen/x15"
                android:textSize="@dimen/textsize_15sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/picRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10" />

            <ImageView
                android:id="@+id/tvUploadPic"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/x5"
                android:layout_marginTop="@dimen/x10"
                android:src="@mipmap/ic_upload_pic" />

            <TextView
                android:id="@+id/tvNext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginTop="@dimen/x60"
                android:background="@color/tab_colorf9"
                android:gravity="center"
                android:text="确认提交"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textsize_16sp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>