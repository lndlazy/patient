<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x249"
    android:layout_height="@dimen/x142"
    android:layout_gravity="center"
    android:background="@drawable/shape_round_corner_white"
    android:gravity="center"
    android:minHeight="@dimen/x142"
    android:minWidth="@dimen/x249"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvdiaologtitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x44"
        android:layout_margin="@dimen/x4"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textsize_16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etdialogcontent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x36"
        android:layout_marginLeft="@dimen/x13"
        android:layout_marginRight="@dimen/x13"
        android:background="@drawable/ic_et_bg"
        android:singleLine="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/x9"
        android:background="@color/gray_bg_eb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x53"
        android:layout_marginLeft="@dimen/x9"
        android:layout_marginRight="@dimen/x9"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvdialogcancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cp_cancel"
            android:textColor="@color/menu_blue"
            android:textSize="@dimen/textsize_16sp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_bg_eb" />

        <TextView
            android:id="@+id/tvdialogcreate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/menu_blue"
            android:textSize="@dimen/textsize_16sp" />

    </LinearLayout>

</LinearLayout>