    android:layout_height="@dimen/x100"
    android:layout_centerInParent="true"
    android:layout_gravity="center">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvImg"
        android:layout_width="@dimen/x80"
