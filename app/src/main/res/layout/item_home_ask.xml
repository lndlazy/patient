<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/x5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdvImg"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:layout_marginLeft="@dimen/x8"
            android:padding="@dimen/x3"
            android:src="@mipmap/ic_doctor"
            fresco:failureImage="@mipmap/ic_doctor"
            fresco:placeholderImage="@mipmap/ic_doctor"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x25"
            android:layout_marginLeft="@dimen/x10"
            android:layout_toRightOf="@id/sdvImg"
            android:gravity="center"
            android:text="张**"
            android:textColor="@color/txt_color_ma3"
            android:textSize="@dimen/textsize_14sp" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x25"
            android:layout_below="@id/tvName"
            android:layout_marginLeft="@dimen/x10"
            android:layout_toRightOf="@id/sdvImg"
            android:gravity="center"
            android:text="2018-02-04"
            android:textColor="@color/txt_color_light9"
            android:textSize="@dimen/textsize_12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="@dimen/x22"
            android:layout_height="@dimen/x22"
            android:layout_marginLeft="@dimen/x8"
            android:layout_marginTop="@dimen/x8"
            android:src="@mipmap/ic_ask" />

        <TextView
            android:id="@+id/tvAsk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x8"
            android:layout_toRightOf="@id/iv1"
            android:ellipsize="end"
            android:lines="2"
            android:paddingLeft="@dimen/x12"
            android:paddingRight="@dimen/x12"
            android:text="问题"
            android:textColor="@color/txt_color_ma3"
            android:textSize="@dimen/textsize_16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:layout_marginLeft="@dimen/x8"
            android:padding="@dimen/x2"
            android:src="@mipmap/ic_answer" />

        <TextView
            android:id="@+id/tvAnswer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x25"
            android:layout_toRightOf="@id/iv2"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x12"
            android:paddingRight="@dimen/x12"
            android:singleLine="true"
            android:text="回答"
            android:textColor="@color/txt_color_light6"
            android:textSize="@dimen/textsize_16sp" />

    </RelativeLayout>

</LinearLayout>