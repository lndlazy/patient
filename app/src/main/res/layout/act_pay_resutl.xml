<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.ylean.cf_hospitalapp.widget.TitleBackBarView
        android:id="@+id/tbv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        custom:mTitleBarColor="@color/tab_colorf9"
        custom:mTitleBarText="@string/pay_notice"
        custom:mTitleLeft="@mipmap/ic_arrow_left" />

    <include layout="@layout/line_gray" />

    <ImageView
        android:id="@+id/ivpay"
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/x40"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x80"
        android:src="@mipmap/ic_sun_success" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x10"
        android:text="支付成功"
        android:textColor="@color/txt_color_light6"
        android:textSize="@dimen/textsize_20sp" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x10"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:text="订单已经支付成功"
        android:textColor="@color/txt_color_light9"
        android:textSize="@dimen/textsize_15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginTop="@dimen/x80"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/checkOrder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x8"
            android:layout_weight="1"
            android:visibility="invisible"
            android:background="@drawable/shape_line_gray"
            android:gravity="center"
            android:text="查看订单"
            android:textColor="@color/tab_colorf9"
            android:textSize="@dimen/textsize_14sp" />


        <TextView
            android:id="@+id/goHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x8"
            android:layout_weight="1.5"
            android:background="@drawable/shape_line_gray"
            android:gravity="center"
            android:text="返回首页"
            android:textColor="@color/tab_colorf9"
            android:textSize="@dimen/textsize_13sp" />


        <TextView
            android:id="@+id/watch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_blue_big"
            android:gravity="center"
            android:visibility="invisible"
            android:text="查看问诊"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_14sp" />

    </LinearLayout>

</LinearLayout>