<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/x8">

        <include layout="@layout/line_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDoctorLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginTop="@dimen/x10"
                android:text="医院类型"
                android:textColor="@color/txt_color_ma3"
                android:textSize="@dimen/textsize_16sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/hospitalTypeRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDoctorLevel"
                android:layout_marginBottom="@dimen/x5"
                android:layout_marginTop="@dimen/x10"
                android:paddingLeft="@dimen/x15"
                android:paddingRight="@dimen/x15" />

        </RelativeLayout>

        <include layout="@layout/line_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvHospitalLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginTop="@dimen/x10"
                android:text="医院级别"
                android:textColor="@color/txt_color_ma3"
                android:textSize="@dimen/textsize_16sp" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/hospitalLevelRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvHospitalLevel"
                android:layout_marginBottom="@dimen/x5"
                android:layout_marginTop="@dimen/x10"
                android:gravity="center"
                android:paddingLeft="@dimen/x15"
                android:paddingRight="@dimen/x15" />


        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/x2"
            android:background="@color/line_colorf7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rvReset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/x10"
                android:text="重置"
                android:textColor="@color/tab_colorf9"
                android:textSize="@dimen/textsize_18sp" />

            <TextView
                android:id="@+id/tvSure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/tab_colorf9"
                android:gravity="center"
                android:padding="@dimen/x10"
                android:text="确定"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textsize_18sp" />

        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>