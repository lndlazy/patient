<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x70"
    android:background="@android:color/white">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvImg"
        android:layout_width="@dimen/x50"
        android:layout_height="@dimen/x50"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x15"
        fresco:failureImage="@mipmap/ic_my_hpic"
        fresco:placeholderImage="@mipmap/ic_my_hpic" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x40"
        android:layout_marginLeft="@dimen/x10"
        android:layout_toRightOf="@id/sdvImg"
        android:gravity="bottom"
        android:text="高志汉"
        android:textColor="@color/txt_color_ma3"
        android:textSize="@dimen/textsize_16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x40"
        android:layout_below="@id/tvName"
        android:layout_marginLeft="@dimen/x10"
        android:layout_toRightOf="@id/sdvImg"
        android:gravity="top"
        android:paddingTop="@dimen/x5"
        android:text="2018-10-23"
        android:textColor="@color/txt_color_light9"
        android:textSize="@dimen/textsize_12sp" />


    <TextView
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/x25"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x15"
        android:background="@drawable/shape_bg_blue"
        android:gravity="center"
        android:text="已关注"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textsize_10sp" />

</RelativeLayout>